.container {
  padding: 40rpx;
  background-color: #f7f9fc;
  min-height: 100vh;
}

.section-title {
  font-size: 28rpx;
  color: #1296DB;
  margin-bottom: 20rpx;
  margin-top: 40rpx;
  padding-left: 10rpx;
}

.card-group {
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.02);
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.setting-item {
  display: flex;
  flex-direction: column;
}

.setting-item.row {
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
}

.border-bottom {
  border-bottom: 2rpx solid #f5f5f5;
}

.item-header {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
}

.item-icon {
  margin-right: 12rpx;
  font-size: 32rpx;
}

.avatar-wrapper {
  padding: 0;
  width: 96rpx !important;
  height: 96rpx !important;
  border-radius: 50%;
  margin: 0;
  background: transparent;
}

.avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  display: block;
}

.nickname-input, .region-input {
  text-align: right;
  font-size: 32rpx;
  color: #333;
  flex: 1;
}

slider {
  margin: 20rpx 0;
}

.save-btn-container {
  margin-top: 60rpx;
}

.save-btn {
  background-color: #1296DB;
  color: white;
  border-radius: 48rpx;
  font-size: 32rpx;
  padding: 24rpx 0;
  width: 100% !important;
  font-weight: 500;
  box-shadow: 0 8rpx 24rpx rgba(18, 150, 219, 0.3);
}

.save-btn:active {
  opacity: 0.8;
}